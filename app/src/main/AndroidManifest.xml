<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nepobabies.retas">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Retas"
        tools:targetApi="31">

        <!-- Splash screen is now the launcher -->
        <activity
            android:name="com.nepobabies.retas.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities -->
        <activity
            android:name="com.nepobabies.retas.AuthActivity"
            android:exported="false" />

        <activity
            android:name="com.nepobabies.retas.LoginActivity"
            android:exported="false" />

        <activity
            android:name="com.nepobabies.retas.SignUpActivity"
            android:exported="false" />

        <activity
            android:name="com.nepobabies.retas.MainActivity"
            android:exported="false" />

    </application>

</manifest>

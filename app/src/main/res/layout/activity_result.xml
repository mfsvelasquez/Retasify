<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48583B"
    android:padding="24dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="-8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Go back to previous screen"
        android:src="@drawable/ic_arrow_back"
        app:tint="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_beige_container"
        android:padding="32dp"
        android:layout_gravity="center"
        android:elevation="6dp">

        <TextView
            android:id="@+id/text_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fashion Footprint Calculator"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#48583B"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/text_result_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Fashion Footprint is"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="16sp"
            android:textColor="#48583B"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_result_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#48583B"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <ProgressBar
            android:id="@+id/progress_result"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:progress="50"
            android:max="100"
            android:progressTint="#FFD700"
            android:backgroundTint="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/text_result_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GREAT! That's likely you"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="16sp"
            android:textColor="#48583B"
            android:layout_gravity="center" />
    </LinearLayout>
</FrameLayout>

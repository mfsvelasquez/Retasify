<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".ui.donate.DonateDetailsFragment">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <!-- Title -->
    <TextView
        android:id="@+id/title_donate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Donate"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_back" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_box"
            android:padding="20dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have extra clothes? Let's donate it!"
                android:fontFamily="@font/montserrat_bold"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How's your clothes doing?"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingBottom="0dp"
                android:fontFamily="@font/montserrat_regular"/>

            <!-- Selected Emoji Feedback -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/emojiGreatIndicator"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:src="@drawable/greatgray"
                    android:contentDescription="Great face"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/emojiGoodIndicator"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:src="@drawable/goodgray"
                    android:contentDescription="Good face"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/emojiOkayIndicator"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:src="@drawable/notbadgray"
                    android:contentDescription="Not Bad face"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/emojiBadIndicator"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:src="@drawable/sadgray"
                    android:contentDescription="Sad face"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:id="@+id/conditionMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your pre-loved apparels deserve a new home!"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginBottom="20dp" />

            <!-- Donation Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/inner_box"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <!-- Donation Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose who will get your donation!"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/montserrat_bold"/>

                <!-- Category Labels -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Local Communities"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Companies"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_bold"/>
                </LinearLayout>

                <!-- Partner Logos Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/partner_kultura"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo_kultura"
                        app:shapeAppearanceOverlay="@style/CircleImageView"
                        app:strokeColor="@color/dark_green"
                        app:strokeWidth="2dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/partner_community"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="24dp"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo_community"
                        app:shapeAppearanceOverlay="@style/CircleImageView"
                        app:strokeColor="@color/dark_green"
                        app:strokeWidth="2dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/partner_good_neighbors"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="24dp"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo_good_neighbors"
                        app:shapeAppearanceOverlay="@style/CircleImageView"
                        app:strokeColor="@color/dark_green"
                        app:strokeWidth="2dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav"
        android:background="@drawable/bottom_nav_background"
        android:clipToOutline="true"
        app:itemIconTint="@color/green"
        app:itemTextColor="@color/green"
        app:itemIconSize="22dp"
        app:itemActiveIndicatorStyle="@style/App.Custom.Indication"
        app:labelVisibilityMode="labeled"
        app:itemTextAppearanceActive="@style/BottomNavTextStyle"
        app:itemTextAppearanceInactive="@style/BottomNavTextStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>
